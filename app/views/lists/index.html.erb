<div class="list_bg">
<h1 class="text-center">Save your favorite Movie</h1>
</div>

<div class="container m-5">

<h2>My list</h2>
<div class="card_block d-flex flex-row">
  <% @lists.each do |list| %>
    <div class="card p-2 m-2">
    <%= link_to list.name, list_path(list), class: "text-center" %>
    </div>
  <% end %>
</div>


<div><%= link_to "Create a List", new_list_path, class: "btn btn-primary m-2" %></div>
</div>
