<div class="list_bg">
<h1 class="text-center">Save your favorite Movie</h1>
</div>

<div class="container m-5">

<h2>My list</h2>

<div class="cards">
  <% @lists.each do |list| %>
    <% if list.photo.key.present? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>')">
       <%= link_to list.name, list_path(list) %>
    </div>
    <% else %>
    <div class="card-category" style="background-color:grey;">
       <%= link_to list.name, list_path(list) %>
    </div>
    <% end %>
  <% end %>
</div>


<div><%= link_to "Create a List", new_list_path, class: "btn btn-primary mb-2" %></div>
</div>
